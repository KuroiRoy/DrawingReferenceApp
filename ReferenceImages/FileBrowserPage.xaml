<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ReferenceImages"
             x:Class="ReferenceImages.FileBrowserPage"
             x:DataType="local:FolderBrowserViewModel"
             Title="File Browser">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Path breadcrumb -->
        <Label x:Name="PathLabel" 
               Grid.Row="0"
               Margin="10"
               FontAttributes="Bold"/>
        
        <!-- File/folder list -->
        <CollectionView x:Name="ItemsCollectionView" Grid.Row="1" SelectionMode="Single" SelectionChanged="OnSelectionChanged">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="local:FileBrowserItem">
                    <Grid Padding="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        
                        <Image Source="{Binding Icon}"
                               WidthRequest="24"
                               HeightRequest="24"/>
                               
                        <Label Text="{Binding Name}"
                               Grid.Column="1"
                               VerticalOptions="Center"/>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
        
        <HorizontalStackLayout Grid.Row="2">
            <Button Text="Select Folder" Command="{Binding SelectFolderCommand}" Margin="5"/>
            <Button Text="Cancel" Command="{Binding CancelCommand}" Margin="5"/>
        </HorizontalStackLayout>
    </Grid>
</ContentPage>
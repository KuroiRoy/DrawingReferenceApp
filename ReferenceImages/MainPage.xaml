<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReferenceImages.MainPage">

	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>

		<Grid Grid.Column="0" Grid.Row="0">
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="Auto"/>
			</Grid.ColumnDefinitions>

			<Button Grid.Column="0" Grid.Row="0" x:Name="ButtonFolder" Text="Folder" Clicked="ButtonFolder_Clicked" Margin="5"/>
			<Label Grid.Column="1" Grid.Row="0" x:Name="LabelPath" Text="" VerticalTextAlignment="Center" Margin="5"/>
			<Button Grid.Column="2" Grid.Row="0" x:Name="ButtonPrevious" Text="Previous" Clicked="ButtonPrevious_Clicked" Margin="5"/>
			<Button Grid.Column="3" Grid.Row="0" x:Name="ButtonRandom" Text="Random Image" Clicked="ButtonRandom_Clicked" Margin="5"/>
			<Button Grid.Column="4" Grid.Row="0" x:Name="ButtonNext" Text="Next" Clicked="ButtonNext_Clicked" Margin="5"/>
		</Grid>
		
		<Image Grid.Column="0" Grid.Row="1" x:Name="Image"/>
	</Grid>

</ContentPage>
